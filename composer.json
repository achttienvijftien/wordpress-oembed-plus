{
    "name": "achttienvijftien/wordpress-oembed-plus",
    "description": "WordPress oEmbed Plus",
    "keywords" : ["wordpress", "plugin"],
    "homepage" : "https://www.1815.nl",
    "type": "wordpress-plugin",
    "license" : "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "AchttienVijftien\\Plugin\\OembedPlus\\": "src/"
        }
    },
    "authors": [
        {
            "name": "1815",
            "email": "it@1815.nl",
            "homepage" : "https://www.1815.nl"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "wp-phpunit/wp-phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.6",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "wp-coding-standards/wpcs": "^3.0",
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "achttienvijftien/building-techniques": "^1.1"
    },
    "scripts": {
        "format": "phpcbf --standard=1815BuildingTechniques --report-summary --report-source src",
        "lint": "phpcs --standard=1815BuildingTechniques src"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
